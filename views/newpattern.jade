extends layout

block content
    include header
    .container
        .main
            h1= title
            p Add a knitting pattern to our library and you'll be able to access it from anywhere.
            form(name="addpattern", method="post", action="/addpattern")
                ul
                    li
                        label Pattern Name
                        input(type="text", placeholder=" ", name="name")
                    li
                        label Author or Source Name
                        p.hint Please give credit
                        input(type="text", placeholder=" ", name="sourcename")
                        //-input(type="checkbox", name="self")
                        //-| I wrote this pattern
                    li
                        label Link to Source
                        input(type="text", placeholder="Paste the URL here", name="sourceurl")
                    li
                        label Type of Item
                        input(type="text", placeholder="ex: socks", name="type")
                    li 
                        a(href="#").plus 
                            label Choose Yarn
                            img(src="/images/plus.svg", alt="+").formtoggle
                        a(href="#").minus.hidden
                            label Choose Yarn
                            img(src="/images/minus.svg", alt="-").formtoggle
                        .expand.hidden
                            .yarn
                                input(type="radio", name="yarnweight", id="yarn2", checked=false, value="Lace / 2ply")
                                label(for="yarn2")   
                                    img#y2(src="/images/yarn.svg", alt="+")
                                    span Lace / 2 ply 
                            .yarn
                                input(type="radio", name="yarnweight", id="yarn4", checked=false, value="Fingering / 4ply")    
                                label(for="yarn4") 
                                    img#y4(src="/images/yarn.svg", alt="+")
                                    span Fingering / 4 ply       
                            .yarn
                                input(type="radio", name="yarnweight", id="yarn5", checked=false, value="Sport / 5ply")
                                label(for="yarn5")
                                    img#y5(src="/images/yarn.svg", alt="+")
                                    span Sport / 5 ply
                            .yarn
                                input(type="radio", name="yarnweight", id="yarn8", checked=false, value="DK / 8ply")
                                label(for="yarn8") 
                                    img#y8(src="/images/yarn.svg", alt="+")
                                    span DK / 8 ply  
                            .yarn
                                input(type="radio", name="yarnweight", id="yarn10", checked=false, value="Worsted / 10ply")    
                                label(for="yarn10") 
                                    img#y10(src="/images/yarn.svg", alt="+")
                                    span Worsted / 10 ply
                            .yarn
                                input(type="radio", name="yarnweight", id="yarn12", checked=false, value="Bulky / 12ply")    
                                label(for="yarn12")
                                    img#y12(src="/images/yarn.svg", alt="+")
                                    span Bulky / 12 ply
                                                
                    //-li
                        a(href="#").plus 
                            label Choose Yarn 
                            img(src="/images/plus.svg", alt="+").formtoggle
                        a(href="#").minus.hidden
                            label Choose Yarn 
                            img(src="/images/minus.svg", alt="-").formtoggle
                        .expand.hidden
                            select(name="yarnweight")
                                option(value="Lace / 2ply") Lace / 2 ply
                                option(value="Fingering / 4ply") Fingering / 4ply
                                option(value="Sport / 5ply") Sport / 5ply
                                option(value="DK / 8ply") DK / 8ply
                                option(value="Worsted / 10ply") Worsted / 10ply
                                option(value="Bulky / 12ply") Bulky / 12ply
                    li 
                        a(href="#").plus 
                            label Choose Needles
                            img(src="/images/plus.svg", alt="+").formtoggle
                        a(href="#").minus.hidden
                            label Choose Needles
                            img(src="/images/minus.svg", alt="-").formtoggle
                        .expand.hidden
                            label US 5 / 3.75mm
                                input(type="radio", name="yarnweight", checked=false, value="US 5 / 3.75mm")
                                img(src="/images/needle.svg", alt="+") 
                            label US 6 / 4mm
                                input(type="radio", name="yarnweight", checked=false, value="US 6 / 4mm")
                                img(src="/images/needle.svg", alt="+")
                            label US 7 / 4.5mm
                                input(type="radio", name="yarnweight", checked=false, value="US 7 / 4.5mm")
                                img(src="/images/needle.svg", alt="+")
                            label US 8 / 5mm   
                                input(type="radio", name="yarnweight", checked=false, value="US 8 / 5mm")
                                img(src="/images/needle.svg", alt="+")
                            label US 9 / 5.5mm
                                input(type="radio", name="yarnweight", checked=false, value="US 9 / 5.5mm")
                                img(src="/images/needle.svg", alt="+")
                            label US 10 / 6mm
                                input(type="radio", name="yarnweight", checked=false, value="US 10 / 6mm")
                                img(src="/images/needle.svg", alt="+")  
                            label US 11 / 8mm
                                input(type="radio", name="yarnweight", checked=false, value="US 11 / 8mm")
                                img(src="/images/needle.svg", alt="+") 
                            label US 13 / 9mm
                                input(type="radio", name="yarnweight", checked=false, value="US 13 / 9mm")
                                img(src="/images/needle.svg", alt="+") 
                    //-li  
                        a(href="#").plus
                            label Choose Needles 
                            img(src="/images/plus.svg", alt="+").formtoggle
                        a(href="#").minus.hidden
                            label Choose Needles 
                            img(src="/images/minus.svg", alt="-").formtoggle
                        .expand.hidden
                            select(name="needlesize")
                                option(value="US 5 / 3.75mm") US 5 / 3.75mm
                                option(value="US 6 / 4mm") US 6 / 4mm
                                option(value="US 7 / 4.5mm") US 7 / 4.5mm
                                option(value="US 8 / 5mm") US 8 / 5mm
                                option(value="US 9 / 5.5mm") US 9 / 5.5mm
                                option(value="US 10 / 6mm") US 10 / 6mm
                                option(value="US 11 / 8mm") US 11 / 8mm
                                option(value="US 13 / 9mm") US 13 / 9mm
                            select(name="needletype")
                                option(value="Straight") Straight
                                option(value="Circular") Circular
                                option(value="Double-Pointed") Double-Pointed
                    li
                        label Pattern Instructions
                        textarea(name="instructions", cols="30", rows="10")
                button.button(type="submit") Save
